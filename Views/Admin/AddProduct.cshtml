@model AbcRetailer.Models.ProductEntity
@{
    ViewData["Title"] = "Add Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="PartitionKey" />

    <div class="mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control"
               value="@(Model?.Price > 0 ? Model.Price.ToString("F2") : "")" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>


    <div class="mb-2">
        <label>Product Image</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ManageInventory" class="btn btn-secondary">Cancel</a>
</form>

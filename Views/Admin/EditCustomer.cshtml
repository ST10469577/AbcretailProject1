@model AbcRetailer.Models.CustomerProfile
@{
    ViewData["Title"] = "Edit Customer";
}

<h2>Edit Customer</h2>

<form asp-action="EditCustomer" method="post">
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="PartitionKey" />

    <div class="mb-2">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-2">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="mb-2">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Customers" class="btn btn-secondary">Cancel</a>
</form>

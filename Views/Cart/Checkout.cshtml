@model List<dynamic>
@{
    ViewData["Title"] = "Checkout";
}

<section class="container mt-4">
    <header class="mb-4">
        <h2 class="fw-bold text-primary">🛒 Checkout</h2>
        <p class="text-muted">Review items in your cart.</p>
    </header>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Your cart is empty.</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price (R)</th>
                    <th>Added At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.AddedAt</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <p class="fw-bold">Total: R@Model.Sum(i => (double)i.Price)</p>
            <button class="btn btn-success">Proceed to Payment</button>
        </div>
    }
</section>
